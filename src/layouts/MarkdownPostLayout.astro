---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<style>
    span {
        width: 200px;
        margin: 0.5rem;
        border: 1px solid purple;
        padding: 0.5rem;
    }

    a {
        color: #00539f;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        margin: 0 auto;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        font-size: 1.15em;
        background-color: #f8fcfd;
    }
</style>
<BaseLayout pageTitle={frontmatter.title} blogAuthor={frontmatter.author}>
    <img src={frontmatter.image.url} width="500" alt={frontmatter.image.alt} />
    <div class="tags">
        {
            frontmatter.tags.map((tag) => (
                <p class="tag">
                    <a href={`/tags/${tag}`}>{tag}</a>
                </p>
            ))
        }
    </div>
    <p>Written by: {frontmatter.author}</p>
    <slot />
</BaseLayout>
